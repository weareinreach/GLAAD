{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["POSTGRES_URL_NON_POOLING", "POSTGRES_PRISMA_URL", "NEXTAUTH_SECRET"],
	"pipeline": {
		"build:next": {
			"dependsOn": ["db:deploy"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"db:deploy": {
			"dependsOn": ["db:generate"]
		}
	}
}
